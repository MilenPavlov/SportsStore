@model IEnumerable<String>
<div class="btn-group btn-group-sm btn-group-justified">
    @Html.ActionLink("Home", "List", "Products", new{@class="btn btn-default btn-sm"})
    
    @foreach (var link in Model)
    {
        @Html.RouteLink(link, new
        {
            controller = "Product",
            action = "List",
            category = link,
            page = 1
        }, new{@class ="btn btn-default btn-sm" + (link == ViewBag.SelectedCategory ? " btn-prymary" : "")})
    }
</div>
